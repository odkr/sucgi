	rm -f $(cppcheckbuilddir)/*
	find . '(' \
	-name '*.gcda' -o \
	-name '*.gcno' -o \
	-name '*.gcov' -o \
	-name '*.info' \
	')' -exec rm -f '{}' +

clean:
	find . -type d ! -name . | \
	sort -r | \
	while read -r x; do [ "$$(ls -A "$$x")" ] || rmdir "$$x"; done

mostlyclean: $(utilsdir)/samefile
